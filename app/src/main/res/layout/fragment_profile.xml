<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="12dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_manage_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manage Profile" />

        <Button
            android:id="@+id/btn_manage_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manage Address" />

        <Button
            android:id="@+id/btn_manage_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manage card payment" />

        <Button
            android:id="@+id/btn_manage_wallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manage E-Wallet Payment" />

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log out" />

    </LinearLayout>

</FrameLayout>